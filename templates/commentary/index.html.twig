{% extends 'base.html.twig' %}

{% block title %}Commentary index{% endblock %}

{% block body %}
    <h1>Commentary index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Text</th>
            <th>Date</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for commentary in commentaries %}
            <tr>
                <td>{{ commentary.id }}</td>
                <td>{{ commentary.Text }}</td>
                <td>{{ commentary.Date ? commentary.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('commentary_show', {'id': commentary.id}) }}">show</a>
                    <a href="{{ path('commentary_edit', {'id': commentary.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commentary_new') }}">Create new</a>
{% endblock %}
