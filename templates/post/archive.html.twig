{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row d-flex">
            <div class="col-lg-6 flex-row w-100 m-auto">
                {% for post in posts %}
                    <p class="m-auto text-center">
                        {{ post.date|format_datetime('short', 'none', locale=app.request.locale) }}
                    </p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
