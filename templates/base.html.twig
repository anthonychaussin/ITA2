        <ul class="navbar-nav d-inline-flex w-100">
            <li class="nav-item active ml-auto">
                <a class="nav-link text-uppercase font-weight-bold" href="{{ path('home', ['page', 0]) }}">Billets<span
                            class="sr-only">(current)</span></a>
